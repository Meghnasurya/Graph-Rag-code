# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Google AI (Gemini)
GEMINI_API_KEY=your-gemini-api-key

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:5003/auth/github/callback

# Jira OAuth
JIRA_CLIENT_ID=your-jira-client-id
JIRA_CLIENT_SECRET=your-jira-client-secret
JIRA_REDIRECT_URI=http://localhost:5003/auth/jira/callback

# Xray Configuration
# For Xray Cloud (most common)
XRAY_CLIENT_ID=your-xray-client-id
XRAY_CLIENT_SECRET=your-xray-client-secret
XRAY_BASE_URL=https://xray.cloud.getxray.app/api/v1

# For Xray Server/Data Center (on-premise)
# XRAY_BASE_URL=https://your-jira-instance.com/rest/raven/1.0

# Optional: Xray specific settings
# XRAY_PROJECT_KEY=your-default-project-key
# XRAY_TEST_PLAN_KEY=your-default-test-plan
